<Quotes:QuoteUserControl x:Class="SingerDispatch.Panels.Quotes.QuoteHistoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    xmlns:Company="clr-namespace:SingerDispatch.Panels.Companies"
    x:Name="panelQuoteHistory"
    Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgQuotes" Style="{StaticResource ListDisplay}" Height="200" SelectedItem="{Binding ElementName=panelQuoteHistory, Path=SelectedQuote}"  >
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Quote #" Width="0.3*" Binding="{Binding Number}"/>
                <WPF:DataGridTextColumn Header="Revision" Width="0.3*" Binding="{Binding Revision}"/>
                <WPF:DataGridTextColumn Header="Price" Width="0.4*" Binding="{Binding Price, StringFormat=c}" />
                <WPF:DataGridTextColumn Header="Description" Width="3*" Binding="{Binding Description}" />
            </WPF:DataGrid.Columns>            
        </WPF:DataGrid>
        
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />                               
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Name="btnNewQuote" Grid.Column="0" Click="NewQuote_Click">New quote</Button>
            <Button Style="{StaticResource Horizontal}" Name="btnCreateRevisoin" Grid.Column="1" Click="CreateRevisoin_Click">Create revision</Button>
            <Button Style="{StaticResource Horizontal}" Name="btnRemoveQuote" Grid.Column="2">Remove quote</Button>
            <Button Style="{StaticResource Horizontal}" Name="btnCreateJob" Grid.Column="3" Click="CreateJob_Click">Convert to job</Button>            
            <Button Style="{StaticResource HorizontalEnd}" Name="btnPrintQuote" Grid.Column="4" Click="PrintQuote_Click">Print quote</Button>
        </Grid>
        
        <Grid Name="panelQuoteDetails">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />                
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <GroupBox Header="Quote Details" Name="gbQuoteDetails" Margin="0,0,5,0">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>                            
                            
                            <Label Grid.Row="0" Grid.Column="0">Quote #:</Label>
                            <TextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Text="{Binding Number}" />
                            
                            <Label Grid.Row="0" Grid.Column="1">Rev #:</Label>
                            <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding Revision}" />
                            
                            <Label Grid.Row="0" Grid.Column="2">Author:</Label>
                            <ComboBox Name="cmbQuotedBy" Grid.Row="1" Grid.Column="2" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectedItem="{Binding User}" TextSearch.TextPath="Name"></ComboBox>
                            
                            <Label Grid.Row="0" Grid.Column="3">Quote price:</Label>
                            <TextBox Name="txtPrice" Grid.Row="2" Grid.Column="3" Text="{Binding Price}" />
                        </Grid>
                        
                        <Label>Care of:</Label>
                        <ComboBox Name="cmbCareOfCompanies" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectionChanged="CareOfCompanies_SelectionChanged" SelectedItem="{Binding Company1}" TextSearch.TextPath="Name" IsEditable="True" />
                        
                        <Label>Project description</Label>
                        <TextBox Height="40" Style="{StaticResource MultiLine}" VerticalScrollBarVisibility="Disabled" Text="{Binding Description}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0">Creation date:</Label>
                            <WPF:DatePicker Name="dpCreationDate" Grid.Row="1" Grid.Column="0" SelectedDate="{Binding CreationDate}" />

                            <Label Grid.Row="0" Grid.Column="1">Expiration date:</Label>
                            <WPF:DatePicker Name="dpExpirationDate" Grid.Row="1" Grid.Column="1" SelectedDate="{Binding ExpirationDate}" />
                            
                            <Label Grid.Row="2" Grid.Column="0">Start date:</Label>
                            <WPF:DatePicker Name="dpStartDate" Grid.Row="3" Grid.Column="0" SelectedDate="{Binding StartDate}" />

                            <Label Grid.Row="2" Grid.Column="1">End date:</Label>
                            <WPF:DatePicker Name="dpEndDate" Grid.Row="3" Grid.Column="1" SelectedDate="{Binding EndDate}" />
                        </Grid>
                    </StackPanel>    
                </GroupBox>
            </StackPanel>

            
            <GroupBox Header="Contact List" Grid.Column="1" Margin="0,0,5,5">
                <StackPanel>
                    <WPF:DataGrid Name="dgQuoteContacts" Style="{StaticResource ListDisplay}"  MinHeight="150" Margin="5">
                        <WPF:DataGrid.Columns>
                            <WPF:DataGridTextColumn Header="First" Binding="{Binding FirstName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Last" Binding="{Binding LastName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Company" Binding="{Binding Address.Company.Name}" IsReadOnly="True" />
                        </WPF:DataGrid.Columns>
                    </WPF:DataGrid>

                    <Grid DataContext="{Binding ElementName=dgQuoteContacts, Path=SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="58"/>
                            <ColumnDefinition Width="1.1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Name:</Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding Name}" />

                        <Label Grid.Column="0" Grid.Row="1">Email:</Label>
                        <Label Grid.Column="1" Grid.Row="1">
                            <Hyperlink NavigateUri="{Binding Email, StringFormat=mailto:\{0\}}">
                                <TextBlock Text="{Binding Email}" />
                        </Hyperlink>
                        </Label>

                        <Label Grid.Column="0" Grid.Row="2">Company:</Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding Address.Company.Name}" />

                        <Label Grid.Column="3" Grid.Row="0">Phone 1:</Label>
                        <Label Grid.Column="4" Grid.Row="0" Content="{Binding PrimaryPhone}" />

                        <Label Grid.Column="3" Grid.Row="1">Phone 2:</Label>
                        <Label Grid.Column="4" Grid.Row="1" Content="{Binding SecondaryPhone}" />

                        <Label Grid.Column="3" Grid.Row="2">Fax:</Label>
                        <Label Grid.Column="4" Grid.Row="2" Content="{Binding Fax}" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>        
    </StackPanel>
</Quotes:QuoteUserControl>
