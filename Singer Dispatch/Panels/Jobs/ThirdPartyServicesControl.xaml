<Jobs:JobUserControl x:Class="SingerDispatch.Panels.Jobs.ThirdPartyServicesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Jobs="clr-namespace:SingerDispatch.Panels.Jobs"
    Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" Margin="0,0,0,5" Height="180">

        </WPF:DataGrid>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0">New Service</Button>
            <Button Grid.Column="3">Remove Service</Button>
        </Grid>
        
        <GroupBox Header="Service Details">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Load:</Label>
                <ComboBox Grid.Row="0" Grid.Column="1"></ComboBox>

                <Label Grid.Row="1" Grid.Column="0">Company:</Label>
                <ComboBox Grid.Row="1" Grid.Column="1"></ComboBox>

                <Label Grid.Row="2" Grid.Column="0">Service Type:</Label>
                <ComboBox Grid.Row="2" Grid.Column="1">
                    <ComboBoxItem>Tractor</ComboBoxItem>
                    <ComboBoxItem>Crane</ComboBoxItem>
                    <ComboBoxItem>Pilot Car</ComboBoxItem>
                    <ComboBoxItem>Swamper</ComboBoxItem>
                </ComboBox>

                <Label Grid.Row="3" Grid.Column="0">Contact:</Label>
                <ComboBox Grid.Row="3" Grid.Column="1" />

                <Label Grid.Row="4" Grid.Column="0">Location:</Label>
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" />

                <Label Grid.Row="5" Grid.Column="0">Reference:</Label>
                <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" />

                <Label Grid.Row="6" Grid.Column="0">Notes:</Label>
                <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" />


                <GroupBox Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Header="Departure">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Date:</Label>
                        <WPF:DatePicker Grid.Row="0" Grid.Column="1" />

                        <Label Grid.Row="1" Grid.Column="0">Time:</Label>                        
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        
        <Button Margin="0,5,0,0">Add Service</Button>
    </StackPanel>
</Jobs:JobUserControl>
