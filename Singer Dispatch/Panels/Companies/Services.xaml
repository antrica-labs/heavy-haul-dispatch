<UserControl x:Class="SingerDispatch.Panels.Companies.Services"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label>Services Provided</Label>

        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <Label>Notes:</Label>
            <TextBox Name="txtServicesNotes" Height="100" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />
        </StackPanel>
    </Grid>
</UserControl>
