<Panels:BaseUserControl x:Class="SingerDispatch.Panels.Admin.EquipmentControl"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:Panels="clr-namespace:SingerDispatch.Panels"
                        xmlns:Controls="clr-namespace:SingerDispatch.Controls"
                        xmlns:Validators="clr-namespace:SingerDispatch.Controls.Validators"
                        x:Name="ThisControl"
                        Loaded="UserControl_Loaded" mc:Ignorable="d" d:DesignWidth="780">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Grid.Column="0" Click="NewEquipment_Click">New equipment</Button>
            <Button Visibility="Collapsed" Style="{StaticResource Horizontal}" Grid.Column="1" Name="CommitChangesButton" Click="SaveEquipment_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgEquipment, Path=SelectedItem}">Save changes</Button>
            <Button Style="{StaticResource HorizontalEnd}" Grid.Column="1" Click="RemoveEquipment_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgEquipment, Path=SelectedItem}">Remove equipment</Button>
        </Grid>

        <ScrollViewer DockPanel.Dock="Right">
            <StackPanel Width="285" Margin="3,0,0,0">
                <GroupBox Header="Equipment details" DataContext="{Binding ElementName=dgEquipment, Path=SelectedItem}" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgEquipment, Path=SelectedItem}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Unit #:</Label>
                        <TextBox Name="txtUnitNumber" Grid.Row="0" Grid.Column="1" Text="{Binding UnitNumber}" />

                        <Label Grid.Row="1" Grid.Column="0">Default Driver:</Label>
                        <ComboBox Name="cmbEmployees" Grid.Row="1" Grid.Column="1" ItemTemplate="{StaticResource SimpleNameTemplate}" TextSearch.TextPath="Name" Controls:ComboUtil.AllowNull="True">
                            <ComboBox.SelectedItem>
                                <Binding Path="DefaultDriver">
                                    <Binding.ValidationRules>
                                        <Validators:SelectionExistsValidator />
                                    </Binding.ValidationRules>
                                </Binding>
                            </ComboBox.SelectedItem>
                        </ComboBox>

                        <Label Grid.Row="2" Grid.Column="0">Serial</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Serial}" />

                        <Label Grid.Row="3" Grid.Column="0">Year:</Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Year}" />

                        <Label Grid.Row="4" Grid.Column="0">Make:</Label>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Make}" />

                        <Label Grid.Row="5" Grid.Column="0">Model:</Label>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Model}" />

                        <Label Grid.Row="6" Grid.Column="0">Engine:</Label>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Engine}" />

                        <Label Grid.Row="7" Grid.Column="0">Licence:</Label>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding LicencePlate}" />

                        <Label Grid.Row="8" Grid.Column="0">Class:</Label>
                        <ComboBox Name="cmbEquipmentClasses" Grid.Row="8" Grid.Column="1" SelectedItem="{Binding EquipmentClass}" IsEditable="False" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectionChanged="EquipmentClass_SelectionChanged" Controls:ComboUtil.AllowNull="True" />

                        <Label Grid.Row="9" Grid.Column="0">Is dispatchable:</Label>
                        <CheckBox Grid.Row="9" Grid.Column="1" IsChecked="{Binding IsDispatchable}" />

                        <GroupBox Header="Tractor info" Name="gbTractorInfo" Grid.Row="10" Grid.ColumnSpan="2" IsEnabled="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0">Tare weight:</Label>
                                <TextBox Grid.Row="0" Grid.Column="1">
                                    <TextBox.Text>
                                        <MultiBinding Converter="{StaticResource WeightMeasurementConverter}">
                                            <Binding Path="Tare" />
                                            <Binding ElementName="ThisControl" Path="UseImperialMeasurements" />
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>

                                <Label Grid.Row="1" Grid.Column="0">Height</Label>
                                <TextBox Grid.Row="1" Grid.Column="1">
                                    <TextBox.Text>
                                        <MultiBinding Converter="{StaticResource LengthMeasurementConverter}">
                                            <Binding Path="Height" />
                                            <Binding ElementName="ThisControl" Path="UseImperialMeasurements" />
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>

                                <Label Grid.Row="2" Grid.Column="0">Axle config:</Label>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AxleConfig}" />

                                <Label Grid.Row="3" Grid.Column="0">Steer tire size:</Label>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SteerTireSize}" />

                                <Label Grid.Row="4" Grid.Column="0">Drive tire size:</Label>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DriveTireSize}" />

                                <Label Grid.Row="5" Grid.Column="0">Has winch:</Label>
                                <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding HasWinch}" />

                                <Label Grid.Row="6" Grid.Column="0">Is prorated:</Label>
                                <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding IsProrated}" />

                                <Label Grid.Row="7" Grid.Column="0">Only for Scheuerle:</Label>
                                <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding IsOnlyForScheuerle}" />

                                <Label Grid.Row="8" Grid.Column="0">For pushing:</Label>
                                <CheckBox Grid.Row="8" Grid.Column="1" IsChecked="{Binding IsOnlyForPushing}" />
                            </Grid>
                        </GroupBox>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <DataGrid Name="dgEquipment" Style="{StaticResource ListDisplay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Unit" Binding="{Binding UnitNumber}" />
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" />
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" />
                <DataGridTextColumn Header="Driver" Binding="{Binding DefaultDriver.Name}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Panels:BaseUserControl>
