<Panels:JobUserControl x:Class="SingerDispatch.Panels.Jobs.JobsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Panels="clr-namespace:SingerDispatch.Panels"
    xmlns:Jobs="clr-namespace:SingerDispatch.Panels.Jobs"
    x:Name="jobsPanel"
    IsEnabled="False">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <Border Background="LightGoldenrodYellow" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5" DataContext="{Binding ElementName=jobsPanel, Path=SelectedJob}">
            <Grid Margin="5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label>Selected job:</Label>
                    <Label Content="{Binding Number}" FontWeight="Bold" />
                </StackPanel>
                
                <Button Style="{StaticResource HorizontalEnd}" Name="btnCommitChanges" Grid.Column="3" Click="btnCommitChanges_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=jobsPanel, Path=SelectedJob}">Save changes</Button>            </Grid>
        </Border>

        <TabControl Name="Tabs" DataContext="{Binding ElementName=jobsPanel}">
            <TabItem Name="masterTab" Header="Jobs History">
                <Jobs:JobHistoryControl Width="Auto" SelectedCompany="{Binding Path=SelectedCompany}" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>
            <TabItem Header="Loads" IsEnabled="False">
                <Jobs:LoadsControl Width="Auto" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>
            <TabItem Header="Commodities" IsEnabled="False">
                <Jobs:JobCommoditiesControl Width="Auto" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>
            <TabItem Header="Third Party Services" IsEnabled="False">
                <Jobs:ThirdPartyServicesControl Width="Auto" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>
            <TabItem Header="Permits" IsEnabled="False">
                <Jobs:PermitsControl Width="Auto" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>
            <TabItem Header="Dispatches" IsEnabled="False">
                <Jobs:DispatchesControl Width="Auto" SelectedJob="{Binding Path=SelectedJob}" />
            </TabItem>           
        </TabControl>
    </StackPanel>
</Panels:JobUserControl>
