<UserControl x:Class="SingerDispatch.Panels.Companies.CreditAndRatesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    x:Name="creditAndRatesControl"
    Loaded="Control_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="nameTemplate">
                <TextBlock Text="{Binding Path=Name}" />
            </DataTemplate>
        </ResourceDictionary>        
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

               
        <WPF:DataGrid Name="dgCreditRates" Grid.Column="0" Margin="5" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" RowEditEnding="DataGridCommit">
            
        </WPF:DataGrid>
        

        <StackPanel VerticalAlignment="Top" Grid.Column="1">
            <GroupBox Header="Rate Adjustments">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0">Hourly:</Label>
                    <TextBox Name="txtCreditRateHourly" Grid.Column="1" Grid.Row="0" />
                    <Label Grid.Column="2" Grid.Row="0">%</Label>

                    <Label Grid.Column="0" Grid.Row="1">Daily:</Label>
                    <TextBox Name="txtCreditRateDaily" Grid.Column="1" Grid.Row="1" />
                    <Label Grid.Column="2" Grid.Row="1">%</Label>

                    <Label Grid.Column="0" Grid.Row="2">Weekly:</Label>
                    <TextBox Name="txtCreditRateWeekly" Grid.Column="1" Grid.Row="2" />
                    <Label Grid.Column="2" Grid.Row="2">%</Label>

                    <Label Grid.Column="0" Grid.Row="3">Monthly:</Label>
                    <TextBox Name="txtCreditRateMonthly" Grid.Column="1" Grid.Row="3" />
                    <Label Grid.Column="2" Grid.Row="3">%</Label>
                    
                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Click="Button_Click">Save Adjustment</Button>
                </Grid>
            </GroupBox>           

            <GroupBox Header="Administration" DataContext="{Binding ElementName=creditAndRatesControl, Path=SelectedCompany}">
                <StackPanel VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0">Customer Type</Label>
                        <ComboBox Name="cmbCreditCustomerType" Grid.Row="0" Grid.Column="1" SelectedItem="{Binding Type}" />
                        
                        <Label Grid.Row="1" Grid.Column="0">Available Credit:</Label>
                        <TextBox Name="txtCreditAvailableCredit" Grid.Row="1" Grid.Column="1" Text="{Binding AvailableCredit}" />
                       
                        <Label Grid.Row="2" Grid.Column="0">Priority Level:</Label>
                        <ComboBox Name="cmbCreditPriority" Grid.Row="2" Grid.Column="1" ItemTemplate="{StaticResource nameTemplate}" SelectedItem="{Binding CompanyPriorityLevel}" />

                        <Label Grid.Row="3" Grid.Column="0">AccPac Vendor Code:</Label>
                        <TextBox Name="txtCreditAccPacCode" Grid.Row="3" Grid.Column="1"  Text="{Binding AccPacVendorCode}" />

                        <Label Grid.Row="4" Grid.Column="0">Equifax Report Complete:</Label>
                        <CheckBox Name="chbCreditEquifaxComplete" Grid.Row="4" Grid.Column="1" Margin="0,6,0,0" IsChecked="{Binding EquifaxComplete}" />
                    </Grid>

                    <StackPanel VerticalAlignment="Top">
                        <Label>Addministration Notes:</Label>
                        <TextBox Name="txtCreditAdminNotes" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="{Binding Notes}" />
                    </StackPanel>
                    
                    <Button Name="btnSaveAdminDetails" Click="btnSaveAdminDetails_Click">Save Administration Details</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
