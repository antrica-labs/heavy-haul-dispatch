<Quotes:QuoteUserControl x:Class="SingerDispatch.Panels.Quotes.QuoteHistoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    xmlns:Company="clr-namespace:SingerDispatch.Panels.Companies"
    Loaded="ControlLoaded" Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgQuotes" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" Margin="0,0,0,5" MinHeight="200" SelectionChanged="dgQuotes_SelectionChanged">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Quote #" Width="0.3*" Binding="{Binding Number}"/>
                <WPF:DataGridTextColumn Header="Revision" Width="0.3*" Binding="{Binding Revision}"/>
                <WPF:DataGridTextColumn Header="Description" Width="3*" Binding="{Binding Description}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>
        
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />                               
            </Grid.ColumnDefinitions>

            <Button Name="btnNewQuote" Grid.Column="0" Click="btnNewQuote_Click" TabIndex="0">New Quote</Button>
            <Button Name="btnCreateJob" Grid.Column="1" Click="btnCreateJob_Click" TabIndex="1">Create Job From Quote</Button>            
            <Button Name="btnPrintQuote" Grid.Column="3" TabIndex="2">Print Quote</Button>
        </Grid>
        
        <Grid Name="panelQuoteDetails">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
                        
            <GroupBox Header="Quote Details" Name="gbQuoteDetails" Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>                            
                        
                        <Label Grid.Row="0" Grid.Column="0">Quote #:</Label>
                        <TextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Text="{Binding Number}" />
                        
                        <Label Grid.Row="0" Grid.Column="1">Rev #:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding Revision}" />
                        
                        <Label Grid.Row="0" Grid.Column="2">Author:</Label>
                        <ComboBox Name="cmbQuotedBy" TabIndex="3" Grid.Row="1" Grid.Column="2" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectedItem="{Binding User}" TextSearch.TextPath="Name"></ComboBox>
                        
                        <Label Grid.Row="0" Grid.Column="3">Quote Price:</Label>
                        <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Price}" TabIndex="4" />
                    </Grid>
                    
                    <Label>Care Of:</Label>
                    <ComboBox Name="cmbCareOfCompanies" TabIndex="5" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectionChanged="cmbCareOfCompanies_SelectionChanged" SelectedItem="{Binding Company1}" TextSearch.TextPath="Name" IsEditable="True" />
                    
                    <Label>Project Description</Label>
                    <TextBox TabIndex="6" Height="40" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Disabled" Text="{Binding Description}"/>                    
                </StackPanel>    
            </GroupBox>
            
            <GroupBox Header="Quote Timeline" Name="gbQuoteTimeline" Grid.Column="0" Grid.Row="1" Margin="0,5,5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0">Creation Date:</Label>
                    <WPF:DatePicker TabIndex="7" Name="dpCreationDate" Grid.Row="1" Grid.Column="0" SelectedDate="{Binding CreationDate}" SelectedDateChanged="dpCreationDate_SelectedDateChanged" />
                    
                    <Label Grid.Row="0" Grid.Column="1">Expiration Date:</Label>
                    <WPF:DatePicker TabIndex="8" Name="dpExpirationDate" Grid.Row="1" Grid.Column="1" SelectedDate="{Binding ExpirationDate}" SelectedDateChanged="dpExpirationDate_SelectedDateChanged" />
                </Grid>    
            </GroupBox>
            
            <GroupBox Header="Contact List" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,5,5">
                <StackPanel>
                    <WPF:DataGrid Name="dgQuoteContacts" Style="{StaticResource ListDisplay}" HorizontalScrollBarVisibility="Disabled" AutoGenerateColumns="False" MinHeight="150" Margin="5">
                        <WPF:DataGrid.Columns>
                            <WPF:DataGridTextColumn Header="First" Binding="{Binding FirstName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Last" Binding="{Binding LastName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Company" Binding="{Binding Address.Company.Name}" IsReadOnly="True" />                        
                        </WPF:DataGrid.Columns>
                    </WPF:DataGrid>
                
                    <Grid DataContext="{Binding ElementName=dgQuoteContacts, Path=SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="52"/>
                            <ColumnDefinition Width="1.1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Column="0" Grid.Row="0">Name:</Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding Name}" /> 
                        
                        <Label Grid.Column="0" Grid.Row="1">Email:</Label>                        
                        <Label Grid.Column="1" Grid.Row="1">
                            <Hyperlink NavigateUri="{Binding Email, StringFormat=mailto:\{0\}}" RequestNavigate="EmailClick">
                                <TextBlock Text="{Binding Email}" />
                            </Hyperlink>
                        </Label>
                        
                        <Label Grid.Column="0" Grid.Row="2">Company:</Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding Address.Company.Name}" />
                        
                        <Label Grid.Column="3" Grid.Row="0">Phone 1:</Label>
                        <Label Grid.Column="4" Grid.Row="0" Content="{Binding PrimaryPhone}" />
                        
                        <Label Grid.Column="3" Grid.Row="1">Phone 2:</Label>
                        <Label Grid.Column="4" Grid.Row="1" Content="{Binding SecondaryPhone}" />
                        
                        <Label Grid.Column="3" Grid.Row="2">Fax:</Label>
                        <Label Grid.Column="4" Grid.Row="2" Content="{Binding Fax}" />                            
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>        
    </StackPanel>
</Quotes:QuoteUserControl>
