<Panels:LoadUserControl x:Class="SingerDispatch.Panels.Loads.LoadsPanel"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                           xmlns:Panels="clr-namespace:SingerDispatch.Panels"
                           x:Name="ThePanel" mc:Ignorable="d" 
                           d:DesignHeight="300" d:DesignWidth="700">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="LightGoldenrodYellow" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5" DataContext="{Binding ElementName=ThePanel}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" />
                    <Button Grid.Column="3" Style="{StaticResource Horizontal}">View all dispatches</Button>
                    <Button Grid.Column="4" Style="{StaticResource HorizontalEnd}">Save changes</Button>
                </Grid>

                <Expander Header="Job info">
                    <Grid>

                    </Grid>
                </Expander>
            </StackPanel>
        </Border>

        <TabControl Name="Tabs" DataContext="{Binding ElementName=ThePanel}">
            <TabItem Header="Loads"></TabItem>
            <TabItem Header="Loaded commodities"></TabItem>
            <TabItem Header="Extra equipment"></TabItem>
            <TabItem Header="Third party services"></TabItem>
            <TabItem Header="Permits"></TabItem>
        </TabControl>
    </DockPanel>
</Panels:LoadUserControl>