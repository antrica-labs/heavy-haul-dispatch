<Panels:JobUserControl x:Class="SingerDispatch.Panels.Jobs.JobCommoditiesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Panels="clr-namespace:SingerDispatch.Panels"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"    
    Loaded="ControlLoaded" Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgCommodities" Style="{StaticResource ListDisplay}" Height="180" >
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Assigned load" Binding="{Binding Load.FriendlyName}" />
                <WPF:DataGridTextColumn Header="Unit" Binding="{Binding Unit}" />
                <WPF:DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <WPF:DataGridTextColumn Header="Length" Binding="{Binding Length}" />
                <WPF:DataGridTextColumn Header="Width" Binding="{Binding Width}" />
                <WPF:DataGridTextColumn Header="Height" Binding="{Binding Height}" />
                <WPF:DataGridTextColumn Header="Weight" Binding="{Binding Weight}" />
                <WPF:DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=C}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Grid.Column="0" Click="NewCommodity_Click">New commodity</Button>
            <Button Style="{StaticResource HorizontalEnd}" Grid.Column="3" Click="RemoveCommodity_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgCommodities, Path=SelectedItem}" >Remove commodity</Button>
        </Grid>

        <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgCommodities, Path=SelectedItem}">            
            <StackPanel Orientation="Horizontal" Margin="3" DataContext="{Binding ElementName=dgCommodities, Path=SelectedItem}">                
                <Label>Assign to load:</Label>
                <ComboBox Name="cmbLoads" MinWidth="300" SelectedItem="{Binding Load}" ItemTemplate="{StaticResource LoadNameTemplate}" />
            </StackPanel>
        </Border>

        <TabControl IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgCommodities, Path=SelectedItem}">
            <TabItem Header="Commodity" Name="tabCommodityDetails" DataContext="{Binding ElementName=dgCommodities, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />                        
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0">Commodity name:</Label>
                    <ComboBox Name="cmbCommodityName" Text="{Binding Name}" Grid.Row="0" Grid.Column="1" IsEditable="True" ItemTemplate="{StaticResource SimpleNameTemplate}" TextSearch.TextPath="Name" SelectionChanged="CommodityName_SelectionChanged" />

                    <Label Grid.Row="1" Grid.Column="0">Value:</Label>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Value, StringFormat=c}" />

                    <Label Grid.Row="2" Grid.Column="0">Hauling cost:</Label>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Cost, StringFormat=C}" />

                    <Label Grid.Row="3" Grid.Column="0">Serial number:</Label>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Serial}" />

                    <Label Grid.Row="4" Grid.Column="0">Unit number:</Label>
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Unit}" />

                    <Label Grid.Row="5" Grid.Column="0">Owner:</Label>
                    <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Owner}" />

                    <Label Grid.Row="6" Grid.Column="0">Last location:</Label>
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding LastLocation}" />

                    <Label Grid.Row="7" Grid.Column="0">Last address:</Label>
                    <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding LastAddress}" />

                    <Label Grid.Row="8" Grid.Column="0">Notes:</Label>
                    <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Height="60" Style="{StaticResource MultiLine}" Text="{Binding Notes}" />

                    <GroupBox Header="Dimentions (meters/kg)" Grid.Row="0" Grid.Column="2" Grid.RowSpan="8" Margin="5,0,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Grid.Column="0">Length:</Label>
                                <TextBox Name="txtCommodityLength" Grid.Row="0" Grid.Column="1" Text="{Binding Length}"/>

                                <Label Grid.Row="1" Grid.Column="0">Width:</Label>
                                <TextBox Name="txtCommodityWidth" Grid.Row="1" Grid.Column="1" Text="{Binding Width}" Height="22.96" Margin="3,0,3,3" VerticalAlignment="Bottom" />

                                <Label Grid.Row="2" Grid.Column="0">Height:</Label>
                                <TextBox Name="txtCommodityHeight" Grid.Row="2" Grid.Column="1" Text="{Binding Height}" />

                                <Label Grid.Row="3" Grid.Column="0">Estimated:</Label>
                                <CheckBox Name="chbCommoditySizeimated" Grid.Row="3" Grid.Column="1" IsChecked="{Binding SizeEstimated}" />

                                <Label Grid.Row="4" Grid.Column="0">Weight:</Label>
                                <TextBox Name="txtCommodityWeight" Grid.Row="4" Grid.Column="1" Text="{Binding Weight}" />

                                <Label Grid.Row="5" Grid.Column="0">Estimated:</Label>
                                <CheckBox Name="chbCommodityWeightimated" Grid.Row="5" Grid.Column="1" IsChecked="{Binding WeightEstimated}"/>
                            </Grid>
                        </StackPanel>                            
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <TabItem Header="Load" DataContext="{Binding ElementName=dgCommodities, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0" Grid.Row="0">Site name:</Label>
                    <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding LoadSiteName}"/>
                    
                    <Label Grid.Column="0" Grid.Row="1">Address/LSD:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding LoadAddress}"/>
                    
                    <Label Grid.Column="0" Grid.Row="2">Site contact:</Label>
                    <TextBox Grid.Column="1" Grid.Row="2" />
                    
                    <Label Grid.Column="0" Grid.Row="3">Load by:</Label>
                    <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding LoadBy}"/>
                    
                    <Label Grid.Column="0" Grid.Row="4">Load method:</Label>
                    <ComboBox Name="cmbLoadMethods" Grid.Column="1" Grid.Row="4" SelectedItem="{Binding LoadMethod}" ItemTemplate="{StaticResource SimpleNameTemplate}" />
                    
                    <Label Grid.Column="0" Grid.Row="5">Loading date:</Label>
                    <WPF:DatePicker Grid.Column="1" Grid.Row="5" SelectedDate="{Binding LoadDate}" />
                                        
                    <Label Grid.Column="2" Grid.Row="0">Load instructions</Label>
                    <TextBox Grid.Column="2" Style="{StaticResource MultiLine}" Grid.Row="1" Grid.RowSpan="2" Text="{Binding LoadInstructions}" />
                    
                    <Label Grid.Column="2" Grid.Row="3">Load route:</Label>
                    <TextBox Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" Style="{StaticResource MultiLine}" Text="{Binding LoadRoute}"/>                    
                </Grid>                
            </TabItem>           
            
            <TabItem Header="Unload" DataContext="{Binding ElementName=dgCommodities, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0">Site name:</Label>
                    <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding UnloadSiteName}"/>

                    <Label Grid.Column="0" Grid.Row="1">Address/LSD:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding UnloadAddress}" />

                    <Label Grid.Column="0" Grid.Row="2">Site contact:</Label>
                    <TextBox Grid.Column="1" Grid.Row="2"  />

                    <Label Grid.Column="0" Grid.Row="3">Unload by:</Label>
                    <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding UnloadBy}" />

                    <Label Grid.Column="0" Grid.Row="4">Unload method:</Label>
                    <ComboBox Name="cmbUnloadMethods" Grid.Column="1" Grid.Row="4" SelectedItem="{Binding UnloadMethod}" ItemTemplate="{StaticResource SimpleNameTemplate}" />

                    <Label Grid.Column="0" Grid.Row="5">Unloading date:</Label>
                    <WPF:DatePicker Grid.Column="1" Grid.Row="5" SelectedDate="{Binding UnloadDate}"  />
                    
                    <Label Grid.Column="2" Grid.Row="0">Unload instructions</Label>
                    <TextBox  Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Style="{StaticResource MultiLine}" Text="{Binding UnloadInstructions}" />

                    <Label Grid.Column="2" Grid.Row="3">Unload route:</Label>
                    <TextBox Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" Style="{StaticResource MultiLine}" Text="{Binding UnloadRoute}" />
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Panels:JobUserControl>
