<UserControl x:Class="SingerDispatch.Panels.Admin.ConditionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
             mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="400"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
		<Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Grid.Column="0" Click="NewCondition_Click">New condition</Button>
            <Button Style="{StaticResource HorizontalEnd}" Grid.Column="2" Click="RemoveCondition_Click">Remove condition</Button>
        </Grid>

        <Grid DockPanel.Dock="Bottom" DataContext="{Binding ElementName=TheGrid, Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0">Variable 1:</Label>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding DefaultVariable1}" LostFocus="TextBox_LostFocus" />

            <Label Grid.Row="0" Grid.Column="1">Variable 2:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DefaultVariable2}" LostFocus="TextBox_LostFocus" />

            <Label Grid.Row="0" Grid.Column="2">Variable 3:</Label>
            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding DefaultVariable3}" LostFocus="TextBox_LostFocus" />
        </Grid>

        <WPF:DataGrid Name="TheGrid" Style="{StaticResource ListDisplay}" IsReadOnly="False" RowEditEnding="RowEditEnding" SelectionChanged="TheGrid_SelectionChanged">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Condition" Binding="{Binding Line}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>
    </DockPanel>
</UserControl>
