<Jobs:JobUserControl x:Class="SingerDispatch.Panels.Jobs.LoadsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Jobs="clr-namespace:SingerDispatch.Panels.Jobs" 
    Loaded="ControlLoaded"
    Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgLoads" Style="{StaticResource ListDisplay}" Height="180">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Unit" Width="0.15*" Binding="{Binding Unit.Name}"/>
                <WPF:DataGridTextColumn Header="Wheel type" Width="0.2*" Binding="{Binding WheelType.Name}" />
                <WPF:DataGridTextColumn Header="Trailer" Width="0.2*" Binding="{Binding TrailerCombination.Name}" />
                <WPF:DataGridTextColumn Header="Description" Binding="{Binding ServiceDescription}" />
            </WPF:DataGrid.Columns>   
        </WPF:DataGrid>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Name="btnNewLoad" Grid.Column="0" Click="NewLoad_Click">New load</Button>
            <Button Style="{StaticResource HorizontalEnd}" Name="btnRemoveLoad" Grid.Column="3" Click="RemoveLoad_Click">Remove load</Button>
        </Grid>
        
        <GroupBox Header="Vehicle" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Label Grid.Column="0" Grid.Row="0">Unit:</Label>
                <ComboBox Name="cmbUnits" Grid.Column="0" Grid.Row="1" SelectedItem="{Binding Unit}" ItemTemplate="{StaticResource SimpleNameTemplate}"></ComboBox>
                
                <Label Grid.Column="1" Grid.Row="0">Wheel type:</Label>
                <ComboBox Name="cmbWheelTypes" Grid.Column="1" Grid.Row="1" SelectedItem="{Binding WheelType}" ItemTemplate="{StaticResource SimpleNameTemplate}"></ComboBox>                
                
                <Label Grid.Column="2" Grid.Row="0">Trailer combination:</Label>
                <ComboBox Name="cmbTrailerCombinations" Grid.Column="2" Grid.Row="1" SelectedItem="{Binding TrailerCombination}" ItemTemplate="{StaticResource SimpleNameTemplate}"></ComboBox>
                
                <Label Grid.Column="3" Grid.Row="0">Info:</Label>
                <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding Info}" />
            </Grid>    
        </GroupBox>
        
        <GroupBox Header="Timeline" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Start date:</Label>
                <WPF:DatePicker Grid.Row="1" Grid.Column="0" SelectedDate="{Binding StartDate}" />

                <Label Grid.Row="0" Grid.Column="1">End date:</Label>
                <WPF:DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EndDate}" />

                <Label Grid.Row="0" Grid.Column="2">Season</Label>
                <ComboBox Name="cmbSeasons" Grid.Row="1" Grid.Column="2" SelectedItem="{Binding Season}" ItemTemplate="{StaticResource SimpleNameTemplate}" />                    
                
                <Label Grid.Row="0" Grid.Column="3">Ban (%)</Label>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Ban}"/>
            </Grid>
        </GroupBox>
        
        <GroupBox Header="Instruction" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <StackPanel>
                <Label>Description of service:</Label>
                <TextBox Text="{Binding ServiceDescription}"/>
                
                <Label>Additional notes:</Label>
                <TextBox Text="{Binding Notes}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
            </StackPanel>
        </GroupBox>
        
        <GroupBox Header="Dimentions" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>                        
                        <ColumnDefinition Width="76"/>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    
                    <Label Grid.Column="0" Grid.Row="1">Axle weight:</Label>
                    
                    <Label Grid.Column="1" Grid.Row="0">Steer:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding WeightSteer}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="2" Grid.Row="0">Drive:</Label>
                    <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding WeightDrive}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="3" Grid.Row="0">Group 1:</Label>
                    <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding WeightGroup1}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="4" Grid.Row="0">Group 2:</Label>
                    <TextBox Grid.Column="4" Grid.Row="1" Text="{Binding WeightGroup2}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="5" Grid.Row="0">Group 3:</Label>
                    <TextBox Grid.Column="5" Grid.Row="1" Text="{Binding WeightGroup3}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="6" Grid.Row="0">Group 4:</Label>
                    <TextBox Grid.Column="6" Grid.Row="1" Text="{Binding WeightGroup4}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="7" Grid.Row="0">Group 5:</Label>
                    <TextBox Grid.Column="7" Grid.Row="1" Text="{Binding WeightGroup5}" TextChanged="AxleWeightChanged" />
                                        
                    <Label Grid.Column="8" Grid.Row="0">Group 6:</Label>
                    <TextBox Grid.Column="8" Grid.Row="1" Text="{Binding WeightGroup6}" TextChanged="AxleWeightChanged" />
                    
                    <Label Grid.Column="9" Grid.Row="0">Group 7:</Label>
                    <TextBox Grid.Column="9" Grid.Row="1" Text="{Binding WeightGroup7}" TextChanged="AxleWeightChanged" />
                    
                    <Label Grid.Column="10" Grid.Row="0">Group 8:</Label>
                    <TextBox Grid.Column="10" Grid.Row="1" Text="{Binding WeightGroup8}" TextChanged="AxleWeightChanged" />
                    
                    <Label Grid.Column="11" Grid.Row="0">Group 9:</Label>
                    <TextBox Grid.Column="11" Grid.Row="1" Text="{Binding WeightGroup9}" TextChanged="AxleWeightChanged" />
                    
                    <Label Grid.Column="12" Grid.Row="0">Group 10:</Label>
                    <TextBox Grid.Column="12" Grid.Row="1" Text="{Binding WeightGroup10}" TextChanged="AxleWeightChanged" />                    
                    
                    <Label Grid.Column="13" Grid.Row="0">Esitmate:</Label>
                    <CheckBox Grid.Column="13" Grid.Row="1" IsChecked="{Binding WeightEstimated}" />

                    <Label Grid.Column="0" Grid.Row="2">Gross weight:</Label>
                    <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding GrossWeight}" />

                    <Label Grid.Column="3" Grid.Row="2">Length:</Label>
                    <TextBox Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedLength}" />

                    <Label Grid.Column="6" Grid.Row="2">Width:</Label>
                    <TextBox Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedWidth}" />

                    <Label Grid.Column="9" Grid.Row="2">Height:</Label>
                    <TextBox Grid.Column="10" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedHeight}" />
                </Grid>
            </StackPanel>    
        </GroupBox>
    </StackPanel>
</Jobs:JobUserControl>
