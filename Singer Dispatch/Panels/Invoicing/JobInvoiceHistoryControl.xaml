<Panels:InvoiceUserControl x:Class="SingerDispatch.Panels.Invoicing.JobInvoiceHistoryControl"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
                           xmlns:Panels="clr-namespace:SingerDispatch.Panels"
                           d:DesignWidth="780" mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Style="{StaticResource ListDisplay}" Height="150" SelectedItem="{Binding SelectedInvoice}">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Number" Binding="{Binding Number}" />
                <WPF:DataGridTextColumn Header="Revision" Binding="{Binding Revision}" />
                <WPF:DataGridTextColumn Header="Hours" Binding="{Binding Hours}" />
                <WPF:DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>
        
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Style="{StaticResource Horizontal}">New invoice</Button>
            <Button Grid.Column="1" Style="{StaticResource Horizontal}">Create revision</Button>
            <Button Grid.Column="2" Style="{StaticResource Horizontal}">Print invoice</Button>
            <Button Grid.Column="3" Style="{StaticResource HorizontalEnd}">Delete invoice</Button>
        </Grid>
        
        <GroupBox Header="Invoice Details" DataContext="{Binding SelectedInvoice}">
            
        </GroupBox>
    </StackPanel>
</Panels:InvoiceUserControl>
