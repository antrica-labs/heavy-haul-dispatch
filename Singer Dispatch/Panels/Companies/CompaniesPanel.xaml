<Company:CompanyUserControl x:Class="SingerDispatch.Panels.Companies.CompaniesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Company="clr-namespace:SingerDispatch.Panels.Companies"
    x:Name="companiesPanel"
    IsEnabled="False">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ElementName=companiesPanel}">        
        <TabControl Name="Tabs">
            <TabItem Header="Addresses &amp; Contacts">
                <Company:AddressesAndContactsControl SelectedCompany="{Binding Path=SelectedCompany}" Width="Auto" Height="Auto" />
            </TabItem>
            <TabItem Header="Commodities">
                <Company:CommoditiesControl SelectedCompany="{Binding Path=SelectedCompany}" Width="Auto" Height="Auto" />
            </TabItem>
            <TabItem Header="Services">
                <Company:ServicesControl SelectedCompany="{Binding Path=SelectedCompany}" Width="Auto" Height="Auto" />
            </TabItem>
            <TabItem Header="Credit &amp; Rates">
                <Company:CreditAndRatesControl SelectedCompany="{Binding Path=SelectedCompany}" Width="Auto" Height="Auto" />
            </TabItem>
        </TabControl>
    </StackPanel>
</Company:CompanyUserControl>
