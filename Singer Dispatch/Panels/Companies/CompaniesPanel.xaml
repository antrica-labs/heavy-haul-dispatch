<Company:CompanyUserControl x:Class="SingerDispatch.Panels.Companies.CompaniesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Company="clr-namespace:SingerDispatch.Panels.Companies"
    x:Name="companiesPanel">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ElementName=companiesPanel}">        
        <TabControl Name="tabs">
            <TabItem Header="Addresses &amp; Contacts">
                <Company:AddressesAndContactsControl SelectedCompany="{Binding Path=SelectedCompany}" />
            </TabItem>
            <TabItem Header="Commodities">
                <Company:CommoditiesControl SelectedCompany="{Binding Path=SelectedCompany}" />
            </TabItem>
            <TabItem Header="Services">
                <Company:ServicesControl />
            </TabItem>
            <TabItem Header="Credit &amp; Rates">
                <Company:CreditAndRatesControl SelectedCompany="{Binding Path=SelectedCompany}" />
            </TabItem>
        </TabControl>
    </StackPanel>
</Company:CompanyUserControl>
