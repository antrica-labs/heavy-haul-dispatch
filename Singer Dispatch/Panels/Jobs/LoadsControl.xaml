<Panels:JobUserControl x:Class="SingerDispatch.Panels.Jobs.LoadsControl"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:Panels="clr-namespace:SingerDispatch.Panels" 
                       Loaded="ControlLoaded" mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
                        
            <DataTemplate x:Key="EquipmentNameTemplate">
                <TextBlock Text="{Binding UnitNumber}" />
            </DataTemplate>
            <DataTemplate x:Key="TrailerCombinationTemplate">
                <TextBlock Text="{Binding Combination}" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>        
        <StackPanel DockPanel.Dock="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource Horizontal}" Grid.Column="0" Click="NewLoad_Click">New load</Button>
                <Button Style="{StaticResource Horizontal}" Grid.Column="1" Click="DuplicateLoad_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">Duplicate load</Button>
                <Button Style="{StaticResource HorizontalEnd}" Grid.Column="3" Click="RemoveLoad_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">Remove load</Button>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Header="Instruction" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">
                    <StackPanel >
                        <Label>Description of service:</Label>
                        <TextBox Name="txtServiceDescription" Text="{Binding ServiceDescription}"/>

                        <Label>Schedule:</Label>
                        <TextBox Text="{Binding Schedule}" Style="{StaticResource MultiLine}" />

                        <Label>Additional notes:</Label>
                        <TextBox Text="{Binding Notes}" Height="40" Style="{StaticResource MultiLine}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Commodities" Margin="3,0,0,0" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">
                    <ListBox Name="lbCommodities" />
                </GroupBox>                
            </Grid>


            <GroupBox Header="Vehicle" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="0.6*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0" Grid.Row="0">Unit:</Label>
                    <ComboBox Name="cmbUnits" Grid.Column="0" Grid.Row="1" SelectedItem="{Binding Equipment}" ItemTemplate="{StaticResource EquipmentNameTemplate}" IsEditable="True" TextSearch.TextPath="UnitNumber"></ComboBox>
                    
                    <Label Grid.Column="1" Grid.Row="0">Wheel type:</Label>
                    <ComboBox Name="cmbRates" Grid.Column="1" Grid.Row="1" SelectedItem="{Binding Rate}" SelectionChanged="cmbRates_SelectionChanged" ItemTemplate="{StaticResource SimpleNameTemplate}" IsEditable="True" TextSearch.TextPath="Name"></ComboBox>                
                    
                    <Label Grid.Column="2" Grid.Row="0">Rate:</Label>
                    <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=cmbRates, Path=SelectedItem.Adjusted, StringFormat=c}" IsReadOnly="True" Style="{StaticResource ReadOnly}" />                
                    
                    <Label Grid.Column="3" Grid.Row="0">Combination:</Label>
                    <ComboBox Name="cmbTrailerCombinations" Grid.Column="3" Grid.Row="1" SelectedItem="{Binding TrailerCombination}" ItemTemplate="{StaticResource TrailerCombinationTemplate}" />

                    <Label Grid.Row="0" Grid.Column="4">Season</Label>
                    <ComboBox Name="cmbSeasons" Grid.Row="1" Grid.Column="4" SelectedItem="{Binding Season}" ItemTemplate="{StaticResource SimpleNameTemplate}" IsEditable="True" TextSearch.TextPath="Name" />

                    <Label Grid.Row="0" Grid.Column="5">Ban (%)</Label>
                    <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding Ban}"/>
                </Grid>    
            </GroupBox>
            
            <GroupBox Header="Dimentions" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgLoads, Path=SelectedItem}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>                        
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        
                        
                        <Label Grid.Column="0" Grid.Row="1">Axle weight:</Label>
                        
                        <Label Grid.Column="1" Grid.Row="0">Steer:</Label>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding WeightSteer}"  />                    
                        
                        <Label Grid.Column="2" Grid.Row="0">Drive:</Label>
                        <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding WeightDrive}"  />                    
                        
                        <Label Grid.Column="3" Grid.Row="0">Group 1:</Label>
                        <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding WeightGroup1}"  />                    
                        
                        <Label Grid.Column="4" Grid.Row="0">Group 2:</Label>
                        <TextBox Grid.Column="4" Grid.Row="1" Text="{Binding WeightGroup2}"  />                    
                        
                        <Label Grid.Column="5" Grid.Row="0">Group 3:</Label>
                        <TextBox Grid.Column="5" Grid.Row="1" Text="{Binding WeightGroup3}"  />                    
                        
                        <Label Grid.Column="6" Grid.Row="0">Group 4:</Label>
                        <TextBox Grid.Column="6" Grid.Row="1" Text="{Binding WeightGroup4}"  />                    
                        
                        <Label Grid.Column="7" Grid.Row="0">Group 5:</Label>
                        <TextBox Grid.Column="7" Grid.Row="1" Text="{Binding WeightGroup5}"  />
                                            
                        <Label Grid.Column="8" Grid.Row="0">Group 6:</Label>
                        <TextBox Grid.Column="8" Grid.Row="1" Text="{Binding WeightGroup6}"  />
                        
                        <Label Grid.Column="9" Grid.Row="0">Group 7:</Label>
                        <TextBox Grid.Column="9" Grid.Row="1" Text="{Binding WeightGroup7}"  />
                        
                        <Label Grid.Column="10" Grid.Row="0">Group 8:</Label>
                        <TextBox Grid.Column="10" Grid.Row="1" Text="{Binding WeightGroup8}"  />
                        
                        <Label Grid.Column="11" Grid.Row="0">Group 9:</Label>
                        <TextBox Grid.Column="11" Grid.Row="1" Text="{Binding WeightGroup9}"  />
                        
                        <Label Grid.Column="12" Grid.Row="0">Group 10:</Label>
                        <TextBox Grid.Column="12" Grid.Row="1" Text="{Binding WeightGroup10}"  />                    
                        
                        <Label Grid.Column="13" Grid.Row="0">Esitmated:</Label>
                        <CheckBox Grid.Column="13" Grid.Row="1" IsChecked="{Binding WeightEstimated}" />

                        <Label Grid.Column="0" Grid.Row="2">Gross weight:</Label>
                        <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding GrossWeight}" />

                        <Label Grid.Column="3" Grid.Row="2">Length:</Label>
                        <TextBox Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedLength}" />

                        <Label Grid.Column="6" Grid.Row="2">Width:</Label>
                        <TextBox Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedWidth}" />

                        <Label Grid.Column="9" Grid.Row="2">Height:</Label>
                        <TextBox Grid.Column="10" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding LoadedHeight}" />
                    </Grid>
                </StackPanel>    
            </GroupBox>
        </StackPanel>        

        <DataGrid Name="dgLoads" Style="{StaticResource ListDisplay}" SelectionChanged="dgLoads_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Width="0.15*" Binding="{Binding Number, StringFormat={}{0:D2}}" />
                <DataGridTextColumn Header="Unit" Width="0.15*" Binding="{Binding Equipment.UnitNumber}"/>
                <DataGridTextColumn Header="Wheel type" Width="0.25*" Binding="{Binding Rate.Name}" />
                <DataGridTextColumn Header="Trailer" Width="0.4*" Binding="{Binding TrailerCombination.Combination}" />
                <DataGridTemplateColumn Header="Commodities">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource LoadCommoditiesStringConverter}, Path=JobCommodities}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Panels:JobUserControl>
