<Panels:QuoteUserControl x:Class="SingerDispatch.Panels.Quotes.QuotesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    xmlns:Panels="clr-namespace:SingerDispatch.Panels"
    x:Name="quotesPanel"
    IsEnabled="False">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ElementName=quotesPanel}">
        <Border Background="LightGoldenrodYellow" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5">
            <Grid Margin="5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label>Selected quote:</Label>
                    <Label Content="{Binding Path=SelectedQuote.FriendlyName}" FontWeight="Bold" />
                </StackPanel>                
                
                <!-- <Button Style="{StaticResource Horizontal}" Name="btnDiscardChanges" Grid.Column="2" Click="btnDiscardChanges_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">Discard changes</Button> -->
                <Button Style="{StaticResource HorizontalEnd}" Name="btnCommitChanges" Grid.Column="3" Click="btnCommitChanges_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">Save changes</Button>                
            </Grid>
        </Border>
        
        <TabControl Name="Tabs">
            <TabItem Header="Quotes">
                <Quotes:QuoteHistoryControl x:Name="panelQuoteHistory" Width="Auto" Height="Auto" SelectedCompany="{Binding SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <TabItem Name="tabCommodities" Header="Commodities" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">
                <Quotes:QuoteCommoditiesControl x:Name="panelQuoteCommodities" Width="Auto" Height="Auto" SelectedCompany="{Binding Path=SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <TabItem Name="tabSupplements" Header="Supplements" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">
                <Quotes:QuoteSupplements x:Name="panelQuoteSupplements" Width="Auto" Height="Auto" SelectedCompany="{Binding Path=SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <!--
            <TabItem Header="Storage" IsEnabled="False" />
            <TabItem Header="Conditions" IsEnabled="False" />
            -->
        </TabControl>
    </StackPanel>
</Panels:QuoteUserControl>
