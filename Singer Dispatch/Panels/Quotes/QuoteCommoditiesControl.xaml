<Quotes:QuoteUserControl x:Class="SingerDispatch.Panels.Quotes.QuoteCommoditiesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    Loaded="QuoteUserControl_Loaded" Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgQuoteCommodities" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" Margin="0,0,0,5" MinHeight="200">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Unit" />
                <WPF:DataGridTextColumn Header="Name" />
                <WPF:DataGridCheckBoxColumn Header="Length" />
                <WPF:DataGridCheckBoxColumn Header="Width" />
                <WPF:DataGridCheckBoxColumn Header="Height" />
                <WPF:DataGridCheckBoxColumn Header="Weight" />
                <WPF:DataGridCheckBoxColumn Header="Value" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0">New Commodity</Button>
            <Button Grid.Column="3">Remove Commodity</Button>
        </Grid>

        <GroupBox Name="gbDetails"  Header="Details" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="105" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label HorizontalAlignment="Left" Width="125">Commodity Name:</Label>
                <ComboBox Name="cmbCommodityName" Grid.Row="0" Grid.Column="1" IsEditable="True" ItemTemplate="{StaticResource SimpleNameTemplate}" TextSearch.TextPath="Name" SelectionChanged="cmbCommodityName_SelectionChanged" />

                <Label Grid.Row="1" Grid.Column="0">Value:</Label>
                <TextBox Name="txtCommodityValue" Grid.Row="1" Grid.Column="1" Text="{Binding Value}" />

                <Label Grid.Row="2" Grid.Column="0">Serial Number:</Label>
                <TextBox Name="txtCommoditySerial" Grid.Row="2" Grid.Column="1" Text="{Binding Serial}" />

                <Label Grid.Row="3" Grid.Column="0">Unit Number:</Label>
                <TextBox Name="txtCommodityUnitNumber" Grid.Row="3" Grid.Column="1" Text="{Binding Unit}" />

                <Label Grid.Row="4" Grid.Column="0">Owner:</Label>
                <TextBox Name="txtCommodityOwner" Grid.Row="4" Grid.Column="1" Text="{Binding Owner}" />

                <Label Grid.Row="5" Grid.Column="0">Last Location:</Label>
                <TextBox Name="txtCommodityLastLocation" Grid.Row="5" Grid.Column="1" Text="{Binding LastLocation}" />

                <Label Grid.Row="6" Grid.Column="0">Last Address:</Label>
                <TextBox Name="txtCommodityLastAddress" Grid.Row="6" Grid.Column="1" Text="{Binding LastAddress}" />

                <Label Grid.Row="7" Grid.Column="0">Notes:</Label>
                <TextBox Name="txtCommodityNotes" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="{Binding Notes}" />

                <GroupBox Header="Dimentions (meters/kg)" Grid.Row="0" Grid.Column="2" Grid.RowSpan="7" Margin="5,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Length:</Label>
                        <TextBox Name="txtCommodityLength" Grid.Row="0" Grid.Column="1" Text="{Binding Length}"/>

                        <Label Grid.Row="1" Grid.Column="0">Width:</Label>
                        <TextBox Name="txtCommodityWidth" Grid.Row="1" Grid.Column="1" Text="{Binding Width}" Height="22.96" Margin="3,0,3,3" VerticalAlignment="Bottom" />

                        <Label Grid.Row="2" Grid.Column="0">Height:</Label>
                        <TextBox Name="txtCommodityHeight" Grid.Row="2" Grid.Column="1" Text="{Binding Height}" />

                        <Label Grid.Row="3" Grid.Column="0">Estimated:</Label>
                        <CheckBox Name="chbCommoditySizeEstimated" Grid.Row="3" Grid.Column="1" Margin="3,6,0,0" IsChecked="{Binding SizeEstimated}" />

                        <Label Grid.Row="4" Grid.Column="0">Weight:</Label>
                        <TextBox Name="txtCommodityWeight" Grid.Row="4" Grid.Column="1" Text="{Binding Weight}" />

                        <Label Grid.Row="5" Grid.Column="0">Estimated:</Label>
                        <CheckBox Name="chbCommodityWeightEstimated" Grid.Row="5" Grid.Column="1" Margin="3,6,0,0" IsChecked="{Binding WeightEstimated}"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <GroupBox Name="gbDepature" Header="Departure" Grid.Column="0" Margin="0,0,3,0" DataContext="{Binding ElementName=dgQuoteCommodities, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0">Site Name:</Label>
                    <TextBox Grid.Column="1" Grid.Row="0" />

                    <Label Grid.Column="0" Grid.Row="1">Address/LSD:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" />
                </Grid>
            </GroupBox>

            <GroupBox Name="gbDestination" Header="Destination" Grid.Column="1" Margin="3,0,0,0" DataContext="{Binding ElementName=dgQuoteCommodities, Path=SelectedItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>


                    <Label Grid.Column="0" Grid.Row="0">Site Name:</Label>
                    <TextBox Grid.Column="1" Grid.Row="0" />

                    <Label Grid.Column="0" Grid.Row="1">Address/LSD:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" />
                </Grid>
            </GroupBox>
        </Grid>
        
        <Button Name="btnSaveCommodity" Click="btnSaveCommodity_Click">Save Commodity</Button>
    </StackPanel>
</Quotes:QuoteUserControl>
