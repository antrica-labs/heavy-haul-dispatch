<Panels:QuoteUserControl x:Class="SingerDispatch.Panels.Quotes.QuotesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    xmlns:Panels="clr-namespace:SingerDispatch.Panels"
    x:Name="quotesPanel"
    IsEnabled="False">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel DataContext="{Binding ElementName=quotesPanel}">
        <Border Background="LightGoldenrodYellow" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5">
            <Grid Margin="5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label>Selected quote #:</Label>
                    <Label Content="{Binding Converter={StaticResource QuoteFriendlyNameConverter}, Path=SelectedQuote}" FontWeight="Bold" />
                </StackPanel>                
                                
                <Button Style="{StaticResource HorizontalEnd}" Grid.Column="3" Click="CommitQuoteChanges_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">Save changes</Button>                
            </Grid>
        </Border>
        
        <TabControl Name="Tabs">
            <TabItem Header="Quotes">
                <Quotes:QuoteHistoryControl Width="Auto" Height="Auto" SelectedCompany="{Binding SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <TabItem Header="Commodities" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">
                <Quotes:QuoteCommoditiesControl Width="Auto" Height="Auto" SelectedCompany="{Binding SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <TabItem Header="Supplements" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">
                <Quotes:QuoteSupplementsControl Width="Auto" Height="Auto" SelectedCompany="{Binding SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
            <TabItem Header="Storage Items" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=quotesPanel, Path=SelectedQuote}">
                <Quotes:StorageControl Width="Auto" Height="Auto" SelectedCompany="{Binding SelectedCompany}" SelectedQuote="{Binding SelectedQuote}" />
            </TabItem>
        </TabControl>
    </StackPanel>
</Panels:QuoteUserControl>
