<Window x:Class="SingerDispatch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Companies="clr-namespace:SingerDispatch.Panels.Companies"
    xmlns:Quotes="clr-namespace:SingerDispatch.Panels.Quotes"
    Title="Singer Dispatch" WindowStartupLocation="CenterScreen" MinWidth="780" SizeToContent="Height"
    Loaded="Window_Loaded"
    x:Name="mainWindow">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="nameTemplate">
                <TextBlock Text="{Binding Path=Name}" />
            </DataTemplate>
            <DataTemplate x:Key="operatingAsTemplate">
                <TextBlock Text="{Binding Path=OperatingAs}" />
            </DataTemplate>
        </ResourceDictionary>        
    </Window.Resources>
    <Border>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" >
                    <MenuItem Header="_Exit" Click="Terminate" />
                </MenuItem>
                <MenuItem Header="_Create">
                    <MenuItem Name="menuCreateCompany" Header="_New Company" Click="menuCreateCompany_Click" />
                    <MenuItem Header="_New Quote" />
                    <MenuItem Header="_New Job" />
                    <MenuItem Header="_New Load" />
                    <MenuItem Header="_New Dispatch" />
                </MenuItem>
            </Menu>

            <Border Style="{StaticResource MainNavigation}">
                <StackPanel DockPanel.Dock="Left">
                    <Label Style="{StaticResource Heading}">Singer Specialized</Label>
                    <Expander Header="Companies" Style="{StaticResource SectionExpander}" IsExpanded="True">
                        <StackPanel Name="linksCompanies" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>
                    <Expander Header="Quotes" Style="{StaticResource SectionExpander}">
                        <StackPanel Name="linksQuotes" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>
                    <Expander Header="Jobs" Style="{StaticResource SectionExpander}">
                        <StackPanel Name="linksJobs" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>
                    <Expander Header="Billing" Style="{StaticResource SectionExpander}">
                        <StackPanel Name="linksBilling" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>
                    <Expander Header="Reports" Style="{StaticResource SectionExpander}">
                        <StackPanel Name="linksReports" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>
                    <Expander Header="Admin" Style="{StaticResource SectionExpander}">
                        <StackPanel Name="linksAdmin" Style="{StaticResource SectionExpanderContent}" VerticalAlignment="Top"></StackPanel>
                    </Expander>                    
                </StackPanel>
            </Border>
            
            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <Border Style="{StaticResource CompanySelection}" Background="WhiteSmoke">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Company Name:</Label>
                        <Label Grid.Column="1" Grid.Row="0">Operating As:</Label>                        
                        <Label Grid.Column="2" Grid.Row="0">Available Credit:</Label>
                        <Label Grid.Column="3" Grid.Row="0">Priority Level:</Label>

                        <ComboBox Name="cmbCompanies" Grid.Column="0" Grid.Row="1" ItemTemplate="{StaticResource nameTemplate}" TextSearch.TextPath="Name" IsEditable="True" SelectionChanged="cmbCompanies_SelectionChanged" />
                        <ComboBox Name="cmbOperators" Grid.Column="1" Grid.Row="1" ItemTemplate="{StaticResource operatingAsTemplate}" TextSearch.TextPath="OperatingAs" IsEditable="True" SelectionChanged="cmbOperators_SelectionChanged" />
                        <TextBox Name="txtCompanyAvailableCredit" Grid.Column="2" Grid.Row="1" IsReadOnly="True" Text="{Binding ElementName=cmbCompanies, Path=SelectedItem.AvailableCredit, StringFormat=c }" />
                        <TextBox Name="txtCompanyPriorityLevel" Grid.Column="3" Grid.Row="1" IsReadOnly="True" Text="{Binding ElementName=cmbCompanies, Path=SelectedItem.CompanyPriorityLevel.Name}" />
                    </Grid>
                </Border>

                <Border Style="{StaticResource MainContent}" Name="panelMainContent">
                    <Companies:CompaniesPanel SelectedCompany="{Binding ElementName=cmbCompanies, Path=SelectedItem}" />                    
                </Border>                
            </StackPanel>
        </DockPanel>
    </Border>
</Window>
