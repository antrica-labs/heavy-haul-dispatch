<Jobs:JobUserControl x:Class="SingerDispatch.Panels.Jobs.LoadsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Jobs="clr-namespace:SingerDispatch.Panels.Jobs" 
    Loaded="ControlLoaded"
    Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgLoads" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" Margin="0,0,0,5" Height="180">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Unit" Width="0.15*" Binding="{Binding Unit}"/>
                <WPF:DataGridTextColumn Header="Wheel Type" Width="0.2*" Binding="{Binding WheelType}" />
                <WPF:DataGridTextColumn Header="Description" Binding="{Binding ServiceDescription}" />
            </WPF:DataGrid.Columns>   
        </WPF:DataGrid>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Name="btnNewLoad" Grid.Column="0" Click="btnNewLoad_Click">New Load</Button>
            <Button Name="btnRemoveLoad" Grid.Column="3">Remove Load</Button>
        </Grid>
        
        <GroupBox Header="Vehicle" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Label Grid.Column="0" Grid.Row="0">Unit:</Label>
                <ComboBox Name="cmbUnits" Grid.Column="0" Grid.Row="1" SelectedItem="{Binding Unit}"></ComboBox>
                
                <Label Grid.Column="1" Grid.Row="0">Wheel Type:</Label>
                <ComboBox Grid.Column="1" Grid.Row="1" SelectedItem="{Binding WheelType}"></ComboBox>                
                
                <Label Grid.Column="2" Grid.Row="0">Trailer Combination:</Label>
                <ComboBox Grid.Column="2" Grid.Row="1" SelectedItem="{Binding Trailor}"></ComboBox>
                
                <Label Grid.Column="3" Grid.Row="0">Info:</Label>
                <TextBox Grid.Column="3" Grid.Row="1" Text="{Binding Info}" />
            </Grid>    
        </GroupBox>
        
        <GroupBox Header="Timeline" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Start Date:</Label>
                <WPF:DatePicker Grid.Row="1" Grid.Column="0" SelectedDate="{Binding StartDate}" />

                <Label Grid.Row="0" Grid.Column="1">End Date:</Label>
                <WPF:DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EndDate}" />

                <Label Grid.Row="0" Grid.Column="2">Season</Label>
                <ComboBox Grid.Row="1" Grid.Column="2" SelectedItem="{Binding Season}">
                    <ComboBoxItem>High</ComboBoxItem>
                    <ComboBoxItem>Low</ComboBoxItem>
                </ComboBox>
                
                <Label Grid.Row="0" Grid.Column="3">Ban (%)</Label>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Ban}"/>
            </Grid>
        </GroupBox>
        
        <GroupBox Header="Instruction" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <StackPanel>
                <Label>Description of Service:</Label>
                <TextBox Text="{Binding ServiceDescription}"/>
                
                <Label>Additional Notes:</Label>
                <TextBox Text="{Binding Notes}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
            </StackPanel>
        </GroupBox>
        
        <GroupBox Header="Dimentions" DataContext="{Binding ElementName=dgLoads, Path=SelectedItem}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>                        
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0" Grid.Row="0">Axle Weights</Label>
                    <Label Grid.Column="0" Grid.Row="1">Estimated:</Label>
                    <Label Grid.Column="0" Grid.Row="2">Scaled:</Label>
                    
                    <Label Grid.Column="1" Grid.Row="0">Steer:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" />
                    <TextBox Grid.Column="1" Grid.Row="2" />
                    
                    <Label Grid.Column="2" Grid.Row="0">Drive:</Label>
                    <TextBox Grid.Column="2" Grid.Row="1" />
                    <TextBox Grid.Column="2" Grid.Row="2" />
                    
                    <Label Grid.Column="3" Grid.Row="0">Group 1:</Label>
                    <TextBox Grid.Column="3" Grid.Row="1" />
                    <TextBox Grid.Column="3" Grid.Row="2" />
                    
                    <Label Grid.Column="4" Grid.Row="0">Group 2:</Label>
                    <TextBox Grid.Column="4" Grid.Row="1" />
                    <TextBox Grid.Column="4" Grid.Row="2" />
                    
                    <Label Grid.Column="5" Grid.Row="0">Group 3:</Label>
                    <TextBox Grid.Column="5" Grid.Row="1" />
                    <TextBox Grid.Column="5" Grid.Row="2" />
                    
                    <Label Grid.Column="6" Grid.Row="0">Group 4:</Label>
                    <TextBox Grid.Column="6" Grid.Row="1" />
                    <TextBox Grid.Column="6" Grid.Row="2" />
                    
                    <Label Grid.Column="7" Grid.Row="0">Group 5:</Label>
                    <TextBox Grid.Column="7" Grid.Row="1" />
                    <TextBox Grid.Column="7" Grid.Row="2" />
                    
                    <Label Grid.Column="8" Grid.Row="0">Group 6:</Label>
                    <TextBox Grid.Column="8" Grid.Row="1" />
                    <TextBox Grid.Column="8" Grid.Row="2" />
                    
                    <Label Grid.Column="9" Grid.Row="0">Group 7:</Label>
                    <TextBox Grid.Column="9" Grid.Row="1" />
                    <TextBox Grid.Column="9" Grid.Row="2" />
                    
                    <Label Grid.Column="10" Grid.Row="0">Group 8:</Label>
                    <TextBox Grid.Column="10" Grid.Row="1" />
                    <TextBox Grid.Column="10" Grid.Row="2" />
                    
                    <Label Grid.Column="11" Grid.Row="0">Group 9:</Label>
                    <TextBox Grid.Column="11" Grid.Row="1" />
                    <TextBox Grid.Column="11" Grid.Row="2" />
                    
                    <Label Grid.Column="12" Grid.Row="0">Group 10:</Label>
                    <TextBox Grid.Column="12" Grid.Row="1" />
                    <TextBox Grid.Column="12" Grid.Row="2" />
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />                        
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />                        
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0">Gross Weight:</Label>
                    <TextBox Grid.Column="0" Grid.Row="1" />
                    
                    <Label Grid.Column="1">Loaded Length:</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" />
                    
                    <Label Grid.Column="2">Loaded Width:</Label>
                    <TextBox Grid.Column="2" Grid.Row="1" />
                    
                    <Label Grid.Column="3">Loaded Height:</Label>
                    <TextBox Grid.Column="3" Grid.Row="1" />
                </Grid>
            </StackPanel>    
        </GroupBox>
    </StackPanel>
</Jobs:JobUserControl>
