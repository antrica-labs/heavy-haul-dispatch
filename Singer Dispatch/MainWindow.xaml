<Window x:Class="Singer_Dispatch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Singer Dispatch" MinWidth="780" MinHeight="645">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3,3,3,3" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="3,3,3,3" />
        </Style>

        <Style x:Key="Heading" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="DarkBlue" />
        </Style>

        <Style x:Key="CompanySelection" TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Margin" Value="5,5,5,5" />
            <Setter Property="Padding" Value="10,10,10,10" />
        </Style>       
        
        <Style x:Key="MainNavigation" TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Margin" Value="5,5,5,5" />
            <Setter Property="Padding" Value="12,7,12,7" />
        </Style>
        
        <Style x:Key="SectionLink" TargetType="Button">
            <Setter Property="Margin" Value="2,2,2,2" />
        </Style>
        
        <Style x:Key="MainContent" TargetType="Border">
            <Setter Property="Margin" Value="6,6,6,6" />
        </Style>
    </Window.Resources>
    
    <Border>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File" >
                    <MenuItem Header="_Exit" Click="FileExit_Click" />
                </MenuItem>
                <MenuItem Header="_Create">
                    <MenuItem Header="_New Contact" />
                    <MenuItem Header="_New Quote" />
                    <MenuItem Header="_New Job" />
                    <MenuItem Header="_New Load" />
                    <MenuItem Header="_New Dispatch" />
                </MenuItem>
            </Menu>

            <Border Style="{StaticResource MainNavigation}">
                <StackPanel DockPanel.Dock="Left">
                    <Label Style="{StaticResource Heading}">Singer Specialized</Label>
                    <Expander Header="Contacts" IsExpanded="True">
                        <StackPanel VerticalAlignment="Top">
                            <Button Name="btnViewContacts" Style="{StaticResource SectionLink}" Click="btnViewContacts_Click">Contacts</Button>
                            <Button Name="btnViewContactsCommodities" Style="{StaticResource SectionLink}" Click="btnViewContactsCommodities_Click">Commodities</Button>
                            <Button Name="btnViewContactsCredit" Style="{StaticResource SectionLink}" Click="btnViewContactsCredit_Click">Credit and Rates</Button>
                        </StackPanel>
                    </Expander>
                    <Expander Header="Quotes"></Expander>
                    <Expander Header="Jobs"></Expander>
                    <Expander Header="Billing"></Expander>
                    <Expander Header="Reports"></Expander>
                    <Expander Header="Admin"></Expander>
                </StackPanel>
            </Border>
            
            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Stretch">
                <Border Style="{StaticResource CompanySelection}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Company Name:</Label>
                        <Label Grid.Column="0" Grid.Row="2">Operating As:</Label>
                        <Label Grid.Column="1" Grid.Row="0">Head Office Phone:</Label>
                        <Label Grid.Column="1" Grid.Row="2">Head Office Fax:</Label>
                        <Label Grid.Column="3" Grid.Row="0">Available Credit:</Label>
                        <Label Grid.Column="3" Grid.Row="2">Priority Level:</Label>

                        <ComboBox Name="cmbCompanyName" Grid.Column="0" Grid.Row="1" />
                        <ComboBox Name="cmbOperatingAs" Grid.Column="0" Grid.Row="3" />
                        <TextBox Name="txtOfficePhone" Grid.Column="1" Grid.Row="1" />
                        <TextBox Name="txtOfficeFax" Grid.Column="1" Grid.Row="3" />
                        <TextBox Name="txtAvailableCredit" Grid.Column="3" Grid.Row="1" />
                        <ComboBox Name="cmbPriorityLevel" Grid.Column="3" Grid.Row="3" />
                    </Grid>
                </Border>

                <Border Style="{StaticResource MainContent}">
                    <StackPanel VerticalAlignment="Top">
                        <TabControl Name="tabContacts" SelectedIndex="0">
                            <TabItem Header="Addresses &amp; Contacts">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    
                                    <GroupBox Grid.Column="0" Header="Address Detials" Margin="0,0,5,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">Address:</Label>
                                            <TextBox Name="txtAddress1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" />
                                            <TextBox Name="txtAddress2" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" />

                                            <Label Grid.Row="3" Grid.Column="0">Country:</Label>
                                            <TextBox Name="txtCountry" Grid.Row="4" Grid.Column="0" />

                                            <Label Grid.Row="3" Grid.Column="1">Province:</Label>
                                            <TextBox Name="txtProvince" Grid.Row="4" Grid.Column="1" />

                                            <Label Grid.Row="3" Grid.Column="2">City:</Label>
                                            <TextBox Name="txtCity" Grid.Row="4" Grid.Column="2" />

                                            <Label Grid.Row="5" Grid.Column="0">Postal/Zip Code:</Label>
                                            <TextBox Name="txtPostalZip" Grid.Row="6" Grid.Column="0" />

                                            <Label Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2">Address Type:</Label>
                                            <ComboBox Name="cmbAddressType" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" />

                                            <Label Grid.Row="7" Grid.Column="0">Site Main Phone:</Label>
                                            <TextBox Name="txtSiteMainPhone" Grid.Row="8" Grid.Column="0" />

                                            <Label Grid.Row="7" Grid.Column="1">Site Secondary:</Label>
                                            <TextBox Name="txtSiteSecondaryPhone" Grid.Row="8" Grid.Column="1" />

                                            <Label Grid.Row="7" Grid.Column="2">Site Fax:</Label>
                                            <TextBox Name="txtSiteFax" Grid.Row="8" Grid.Column="2" />

                                            <Label Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3">Address Notes:</Label>
                                            <TextBox Name="txtAddressNotes" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Column="1" Header="ContactDetails" Margin="5,0,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Column="0" Grid.Row="0">First Name:</Label>
                                            <TextBox Name="txtContactFirstName" Grid.Column="0" Grid.Row="1" />

                                            <Label Grid.Column="1" Grid.Row="0">Last Name:</Label>
                                            <TextBox Name="txtContactLastName" Grid.Column="1" Grid.Row="1" />

                                            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">Email Address:</Label>
                                            <TextBox Name="txtContactEmail" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" />

                                            <Label Grid.Row="4" Grid.Column="0">Primary Phone:</Label>
                                            <TextBox Name="txtContactPrimaryPhone" Grid.Column="0" Grid.Row="5" />

                                            <Label Grid.Row="4" Grid.Column="1">Secondary Phone:</Label>
                                            <TextBox Name="txtContactSecondaryPhone" Grid.Row="5" Grid.Column="1" />

                                            <Label Grid.Row="6" Grid.Column="0">Contact Type:</Label>
                                            <ComboBox Name="cmbContactType" Grid.Row="7" Grid.Column="0" />

                                            <Label Grid.Row="6" Grid.Column="1">Preferred Contact Method:</Label>
                                            <ComboBox Name="cmbContactPreferedContactMethod" Grid.Row="7" Grid.Column="1" />

                                            <Label Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2">Contact Notes:</Label>
                                            <TextBox Name="txtContactNotes" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Commodities">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <GroupBox Header="Commodities" Grid.Column="0" Margin="0,0,5,0">
                                        <ListBox Name="lsbCommodities"></ListBox>
                                    </GroupBox>

                                    <GroupBox Header="Commodity Details" Grid.Column="1">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="125" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <Label Grid.Row="0" Grid.Column="0">Commodity Name:</Label>
                                                <TextBox Name="txtCommodityName" Grid.Row="0" Grid.Column="1" />

                                                <Label Grid.Row="1" Grid.Column="0">Commodity Type:</Label>
                                                <ComboBox Name="cmbCommodityType" Grid.Row="1" Grid.Column="1" />

                                                <Label Grid.Row="2" Grid.Column="0">Value:</Label>
                                                <TextBox Name="txtCommodityValue" Grid.Row="2" Grid.Column="1" />

                                                <Label Grid.Row="3" Grid.Column="0">Serial Number:</Label>
                                                <TextBox Name="txtCommoditySerial" Grid.Row="3" Grid.Column="1" />

                                                <Label Grid.Row="4" Grid.Column="0">Unit Number:</Label>
                                                <TextBox Name="txtCommodityUnitNumber" Grid.Row="4" Grid.Column="1" />

                                                <Label Grid.Row="5" Grid.Column="0">Owner:</Label>
                                                <TextBox Name="txtCommodityOwner" Grid.Row="5" Grid.Column="1" />

                                                <Label Grid.Row="6" Grid.Column="0">Last Location:</Label>
                                                <TextBox Name="txtCommodityLastLocation" Grid.Row="6" Grid.Column="1" />

                                                <Label Grid.Row="7" Grid.Column="0">Last Address:</Label>
                                                <TextBox Name="txtCommodityLastAddress" Grid.Row="7" Grid.Column="1" />

                                                <Label Grid.Row="8" Grid.Column="0">Notes:</Label>
                                                <TextBox Name="txtCommodityNotes" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />

                                                <GroupBox Header="Dimentions (meters/kg)" Grid.Row="0" Grid.Column="2" Grid.RowSpan="8" Margin="5,0,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="90" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>

                                                        <Label Grid.Row="0" Grid.Column="0">Length:</Label>
                                                        <TextBox Name="txtCommodityLength" Grid.Row="0" Grid.Column="1" />

                                                        <Label Grid.Row="1" Grid.Column="0">Width:</Label>
                                                        <TextBox Name="txtCommodityWidth" Grid.Row="1" Grid.Column="1" />

                                                        <Label Grid.Row="2" Grid.Column="0">Height:</Label>
                                                        <TextBox Name="txtCommodityHeight" Grid.Row="2" Grid.Column="1" />

                                                        <Label Grid.Row="3" Grid.Column="0">Estimated:</Label>
                                                        <CheckBox Name="chbCommoditySizeEstimated" Grid.Row="3" Grid.Column="1" Margin="3,6,0,0" />

                                                        <Label Grid.Row="4" Grid.Column="0">Weight:</Label>
                                                        <TextBox Name="txtCommodityWeight" Grid.Row="4" Grid.Column="1" />

                                                        <Label Grid.Row="5" Grid.Column="0">Weight Type:</Label>
                                                        <ComboBox Name="cmbCommodityWeightType" Grid.Row="5" Grid.Column="1" />

                                                        <Label Grid.Row="6" Grid.Column="0">Estimated:</Label>
                                                        <CheckBox Name="chbCommodityWeightEstimated" Grid.Row="6" Grid.Column="1" Margin="3,6,0,0"/>
                                                    </Grid>
                                                </GroupBox>
                                            </Grid>

                                            <GroupBox Header="Instructions">
                                                <TextBlock TextWrapping="Wrap" Margin="5,5,5,5">Dynamic instructions box that provides helpful information about the highlighted field.</TextBlock>
                                            </GroupBox>
                                        </StackPanel>
                                    </GroupBox>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Credit &amp; Rates">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="350" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <GroupBox Header="Rates" Grid.Column="0" Margin="0,0,10,0">
                                        <ListBox Name="lsbCreditRates"></ListBox>
                                    </GroupBox>

                                    <StackPanel VerticalAlignment="Top" Grid.Column="1">
                                        <GroupBox Header="Update Rates">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <Label Grid.Column="0" Grid.Row="0">Hourly:</Label>
                                                <TextBox Name="txtCreditRateHourly" Grid.Column="1" Grid.Row="0" />
                                                <Label Grid.Column="2" Grid.Row="0">%</Label>

                                                <Label Grid.Column="0" Grid.Row="1">Daily:</Label>
                                                <TextBox Name="txtCreditRateDaily" Grid.Column="1" Grid.Row="1" />
                                                <Label Grid.Column="2" Grid.Row="1">%</Label>

                                                <Label Grid.Column="0" Grid.Row="2">Weekly:</Label>
                                                <TextBox Name="txtCreditRateWeekly" Grid.Column="1" Grid.Row="2" />
                                                <Label Grid.Column="2" Grid.Row="2">%</Label>

                                                <Label Grid.Column="0" Grid.Row="3">Monthly:</Label>
                                                <TextBox Name="txtCreditRateMonthly" Grid.Column="1" Grid.Row="3" />
                                                <Label Grid.Column="2" Grid.Row="3">%</Label>

                                                <Label Grid.Column="0" Grid.Row="4" Target="{Binding ElementName=chbCreditRateApplyDiscount}">Apply Discount:</Label>
                                                <CheckBox Name="chbCreditRateApplyDiscount" Grid.Column="1" Grid.Row="4" Margin="3,6,0,0"/>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="Customer Type">
                                            <StackPanel VerticalAlignment="Top" Margin="5">
                                                <RadioButton>Singer Specialized</RadioButton>
                                                <RadioButton>M.E. Singer Specialized</RadioButton>
                                            </StackPanel>
                                        </GroupBox>

                                        <GroupBox Header="Administration">
                                            <StackPanel VerticalAlignment="Top">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>

                                                    <Label Grid.Column="0" Grid.Row="0">AccPac Vendor Code:</Label>
                                                    <TextBox Name="txtCreditAccPacCode" Grid.Column="1" Grid.Row="0" />

                                                    <Label Grid.Column="0" Grid.Row="1">Equifax Report Complete:</Label>
                                                    <CheckBox Name="chbCreditEquifaxComplete" Grid.Column="1" Grid.Row="1" Margin="0,6,0,0" />
                                                </Grid>

                                                <StackPanel VerticalAlignment="Top">
                                                    <Label>Addministration Notes:</Label>
                                                    <TextBox Name="txtCreditAdminNotes" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>
                        <!-- 
                            <TabControl>
                                <TabItem Header="Move Commodity">
                                </TabItem>
                                <TabItem Header="Supplements">
                                </TabItem>
                                <TabItem Header="Storage">
                                </TabItem>
                                <TabItem Header="Conditions">
                                </TabItem>
                            </TabControl>
                            -->
                    </StackPanel>
                </Border>
            </StackPanel>
        </DockPanel>
        </Border>
</Window>
