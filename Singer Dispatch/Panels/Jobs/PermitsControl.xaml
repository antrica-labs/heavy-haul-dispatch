<Panels:JobUserControl x:Class="SingerDispatch.Panels.Jobs.PermitsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Panels="clr-namespace:SingerDispatch.Panels"
    Loaded="ControlLoaded" Width="750">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>          
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgPermits" Style="{StaticResource ListDisplay}" Height="180">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Issuer" Binding="{Binding Issuer}" Width="0.4*"  />
                <WPF:DataGridTextColumn Header="Permit Type" Binding="{Binding PermitType}" Width="0.3*" />
                <WPF:DataGridTextColumn Header="Conditions" Binding="{Binding Conditions}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>

        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource Horizontal}" Grid.Column="0" Click="NewPermit_Click">New permit</Button>
            <Button Style="{StaticResource Horizontal}" Grid.Column="1" Click="DuplicatePermit_Click">Duplicate permit</Button>
            <Button Style="{StaticResource HorizontalEnd}" Grid.Column="3" Click="RemovePermit_Click" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgPermits, Path=SelectedItem}">Remove permit</Button>
        </Grid>
 
        <GroupBox Header="Service Details" DataContext="{Binding ElementName=dgPermits, Path=SelectedItem}" IsEnabled="{Binding Converter={StaticResource IsEnabledNullConverter}, ElementName=dgPermits, Path=SelectedItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Load:</Label>
                <ComboBox Name="cmbLoads" Grid.Column="1" SelectedItem="{Binding Load}" ItemTemplate="{StaticResource LoadNameTemplate}" Margin="4,3,2,3" />

                <Label Grid.Row="1" Grid.Column="0">Permit #:</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Reference}" />
                
                <Label Grid.Row="2" Grid.Column="0">Permit type:</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PermitType}" />
                
                <Label Grid.Row="3" Grid.Column="0">Issuer:</Label>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Issuer}" />

                <Label Grid.Row="4" Grid.Column="0">Conditions:</Label>
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Conditions}" />

                <GroupBox Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" Header="Departure" Margin="5,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0">Date:</Label>
                        <WPF:DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding PermitDate}" />

                        <Label Grid.Row="1" Grid.Column="0">Time:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PermitTime}" />
                        
                        <Label Grid.Row="2" Grid.Column="0">Cost:</Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Cost, StringFormat=c}" />
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </StackPanel>
</Panels:JobUserControl>
