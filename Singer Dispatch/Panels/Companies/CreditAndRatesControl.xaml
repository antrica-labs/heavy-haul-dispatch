<UserControl x:Class="SingerDispatch.Panels.Companies.CreditAndRatesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    x:Name="creditAndRatesControl">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

               
        <WPF:DataGrid Name="dgCreditRates" Grid.Column="0" Margin="5" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" RowEditEnding="DataGridCommit">
            
        </WPF:DataGrid>
        

        <StackPanel VerticalAlignment="Top" Grid.Column="1">
            <GroupBox Header="Rate Adjustments">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />                        
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0">Hourly:</Label>
                    <TextBox Name="txtCreditRateHourly" Grid.Column="1" Grid.Row="0" />
                    <Label Grid.Column="2" Grid.Row="0">%</Label>

                    <Label Grid.Column="0" Grid.Row="1">Daily:</Label>
                    <TextBox Name="txtCreditRateDaily" Grid.Column="1" Grid.Row="1" />
                    <Label Grid.Column="2" Grid.Row="1">%</Label>

                    <Label Grid.Column="0" Grid.Row="2">Weekly:</Label>
                    <TextBox Name="txtCreditRateWeekly" Grid.Column="1" Grid.Row="2" />
                    <Label Grid.Column="2" Grid.Row="2">%</Label>

                    <Label Grid.Column="0" Grid.Row="3">Monthly:</Label>
                    <TextBox Name="txtCreditRateMonthly" Grid.Column="1" Grid.Row="3" />
                    <Label Grid.Column="2" Grid.Row="3">%</Label>
                </Grid>
            </GroupBox>

            <GroupBox Header="Customer Type">
                <StackPanel VerticalAlignment="Top" Margin="5">
                    <RadioButton>Singer Specialized</RadioButton>
                    <RadioButton>M.E. Singer Specialized</RadioButton>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Administration" DataContext="{Binding ElementName=creditAndRatesControl, Path=SelectedCompany}">
                <StackPanel VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label HorizontalAlignment="Left" Width="150">AccPac Vendor Code:</Label>
                        <TextBox Name="txtCreditAccPacCode" Grid.Column="1" Grid.Row="0" Text="{Binding AccPacVendorCode}" />

                        <Label Grid.Column="0" Grid.Row="1">Equifax Report Complete:</Label>
                        <CheckBox Name="chbCreditEquifaxComplete" Grid.Column="1" Grid.Row="1" Margin="0,6,0,0" IsChecked="{Binding EquifaxComplete}" />
                    </Grid>

                    <StackPanel VerticalAlignment="Top">
                        <Label>Addministration Notes:</Label>
                        <TextBox Name="txtCreditAdminNotes" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Text="{Binding Notes}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
