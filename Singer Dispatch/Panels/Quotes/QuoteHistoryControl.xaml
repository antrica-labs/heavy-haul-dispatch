<Company:CompanyUserControl x:Class="SingerDispatch.Panels.Quotes.QuoteHistoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WPF="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:Company="clr-namespace:SingerDispatch.Panels.Companies"
    Loaded="ControlLoaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SingerDispatchDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <WPF:DataGrid Name="dgQuotes" Style="{StaticResource ListDisplay}" AutoGenerateColumns="False" Margin="0,0,0,5" MinHeight="200" SelectionChanged="dgQuotes_SelectionChanged">
            <WPF:DataGrid.Columns>
                <WPF:DataGridTextColumn Header="Quote #" Width="0.3*" Binding="{Binding Number}"/>
                <WPF:DataGridTextColumn Header="Revision" Width="0.3*" Binding="{Binding Revision}"/>
                <WPF:DataGridTextColumn Header="Description" Width="3*" Binding="{Binding Description}" />
            </WPF:DataGrid.Columns>
        </WPF:DataGrid>
        
        <Grid Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />                               
            </Grid.ColumnDefinitions>
            
            <Button Name="btnCreateQuote" Grid.Column="0" Click="btnCreateQuote_Click">Create Quote</Button>
            <Button Name="btnPrintQuote" Grid.Column="3">Print Quote</Button>
        </Grid>
        
        <Grid Name="panelQuoteDetails">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />                
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
                        
            <GroupBox Header="Quote Details" Name="gbQuoteDetails" Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>                            
                        
                        <Label Grid.Row="0" Grid.Column="0">Quote #:</Label>
                        <TextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Text="{Binding Number}" />
                        
                        <Label Grid.Row="0" Grid.Column="1">Rev #:</Label>
                        <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding Revision}" />
                        
                        <Label Grid.Row="0" Grid.Column="2">Author:</Label>
                        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Revision}" />
                        
                        <Label Grid.Row="0" Grid.Column="3">Quote Price:</Label>
                        <TextBox Grid.Row="2" Grid.Column="3" />
                    </Grid>
                    
                    <Label>Care Of:</Label>
                    <ComboBox Name="cmbCareOfCompanies" ItemTemplate="{StaticResource SimpleNameTemplate}" SelectionChanged="cmbCareOfCompanies_SelectionChanged" SelectedItem="{Binding Company1}" />
                    
                    <Label>Project Description</Label>
                    <TextBox Height="40" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Disabled" Text="{Binding Description}"/>
                </StackPanel>    
            </GroupBox>
            
            <GroupBox Header="Quote Timeline" Name="gbQuoteTimeline" Grid.Column="0" Grid.Row="1" Margin="0,5,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="43*" />
                        <ColumnDefinition Width="52.75*" />
                        <ColumnDefinition Width="96*" />
                        <ColumnDefinition Width="96*" />
                        <ColumnDefinition Width="96*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.ColumnSpan="3" Margin="0,0,95.625,0">Creation Date:</Label>
                    <WPF:DatePicker Name="dpCreationDate" Grid.Row="1" SelectedDate="{Binding CreationDate}" Grid.ColumnSpan="2" />
                    
                    <Label Grid.Column="2" Grid.ColumnSpan="2">Expiration Date:</Label>
                    <WPF:DatePicker Name="dpExpirationDate" Grid.Column="2" Grid.Row="1" Margin="2" SelectedDate="{Binding ExpirationDate}" />
                </Grid>
    
            </GroupBox>
            
            <GroupBox Header="Contact List" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,5,5">
                <StackPanel>
                    <WPF:DataGrid Name="dgQuoteContacts" Style="{StaticResource ListDisplay}" HorizontalScrollBarVisibility="Disabled" AutoGenerateColumns="False" MinHeight="125" Margin="0,0,0,5">
                        <WPF:DataGrid.Columns>
                            <WPF:DataGridTextColumn Header="First" Binding="{Binding FirstName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Last" Binding="{Binding LastName}" IsReadOnly="True" />
                            <WPF:DataGridTextColumn Header="Company" Binding="{Binding Address.Company.Name}" IsReadOnly="True" />                        
                        </WPF:DataGrid.Columns>
                    </WPF:DataGrid>
                
                    <Grid DataContext="{Binding ElementName=dgQuoteContacts, Path=SelectedItem}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="52"/>
                            <ColumnDefinition Width="1.1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Column="0" Grid.Row="0">Name:</Label>
                        <Label Grid.Column="1" Grid.Row="0" Content="{Binding Name}" /> 
                        
                        <Label Grid.Column="0" Grid.Row="1">Email:</Label>                        
                        <Label Grid.Column="1" Grid.Row="1">
                            <Hyperlink NavigateUri="{Binding Email, StringFormat=mailto:\{0\}}" RequestNavigate="EmailClick">
                                <TextBlock Text="{Binding Email}" />
                            </Hyperlink>
                        </Label>
                        
                        <Label Grid.Column="0" Grid.Row="2">Company:</Label>
                        <Label Grid.Column="1" Grid.Row="2" Content="{Binding Address.Company.Name}" />
                        
                        <Label Grid.Column="3" Grid.Row="0">Phone 1:</Label>
                        <Label Grid.Column="4" Grid.Row="0" Content="{Binding PrimaryPhone}" />
                        
                        <Label Grid.Column="3" Grid.Row="1">Phone 2:</Label>
                        <Label Grid.Column="4" Grid.Row="1" Content="{Binding SecondaryPhone}" />
                        
                        <Label Grid.Column="3" Grid.Row="2">Fax:</Label>
                        <Label Grid.Column="4" Grid.Row="2" Content="{Binding Fax}" />                            
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <Button Name="btnCommitQuoteChanges" Click="btnCommitQuoteChanges_Click">Commit Quote Changes</Button>
    </StackPanel>
</Company:CompanyUserControl>
